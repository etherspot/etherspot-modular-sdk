{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/cjs",
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}