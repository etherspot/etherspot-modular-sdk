{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "sourceMap": false,
    "baseUrl": "./",
    "rootDir": "./",
    "strict": false,
    "downlevelIteration": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES5",
      "es2015.collection",
      "es2015.iterable"
    ]
  },
  "include": [
    "./examples/**/*.ts",
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}